{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "cross-env NODE_ENV=development node ./build/app.js",
    "lint": "tslint --project tslint.json",
    "start-watch": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && cpy src/log4js.json build/ && cpy frontend/**/* build/  --parents",
    "postinstall": "npm run build",
    "test": "jest src/tests/",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "latest",
    "config": "^3.0.1",
    "cors": "latest",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "errorhandler": "latest",
    "express": "^4.16.3",
    "express-status-monitor": "latest",
    "helmet": "^3.16.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "latest",
    "jest": "^24.1.0",
    "joi": "latest",
    "method-override": "latest",
    "moment": "^2.24.0",
    "mongodb": "^3.1.6",
    "morgan": "latest",
    "pbkdf2": "^3.0.16",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "typemoq": "^2.1.0",
    "typescript": "^3.0.3",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "bcrypt": "latest"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/config": "0.0.34",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.43",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^23.3.14",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/load-json-file": "^2.0.7",
    "@types/mongodb": "^3.1.22",
    "@types/node": "^10.9.4",
    "@types/pbkdf2": "^3.0.0",
    "@types/request-promise": "^4.1.42",
    "@types/uuid": "^3.4.4",
    "codecov": "^3.2.0",
    "cpy-cli": "^2.0.0",
    "jest-create-mock-instance": "^1.1.0",
    "jest-express": "^1.10.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)x?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "nyc": {
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "engines": {
    "node": "8.12.0"
  }
}
